{% extends 'base.html.twig' %}

{% block body %}
    <h1>Jetons list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Valeur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jeton in jetons %}
            <tr>
                <td><a href="{{ path('jetons_show', { 'id': jeton.id }) }}">{{ jeton.id }}</a></td>
                <td>{{ jeton.valeur }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('jetons_show', { 'id': jeton.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('jetons_edit', { 'id': jeton.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('jetons_new') }}">Create a new jeton</a>
        </li>
    </ul>
{% endblock %}
